{
    "name": "dmitrijkalugin/wildberries-api-client",
    "description": "Laravel client library for Wildberries API integration",
    "keywords": ["laravel", "wildberries", "api", "client", "marketplace", "ecommerce", "russia"],
    "homepage": "https://github.com/dmitrijkalugin/wildberries-api-client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kalugin Dmitrii",
            "email": "cap0neal@yandex.ru"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/http": "^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^9.5|^10.0",
        "mockery/mockery": "^1.5"
    },
    "autoload-dev": {
        "psr-4": {
            "DmitrijKalugin\\WildberriesApiClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },

    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "DmitrijKalugin\\WildberriesApiClient\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DmitrijKalugin\\WildberriesApiClient\\WildberriesServiceProvider"
            ],
            "aliases": {
                "Wildberries": "DmitrijKalugin\\WildberriesApiClient\\Facades\\Wildberries"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
