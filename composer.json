{
    "name": "dmitrijkalugin/wildberries-api-client",
    "description": "Laravel client library for Wildberries API integration",
    "keywords": ["laravel", "wildberries", "api", "client", "marketplace", "ecommerce", "russia"],
    "homepage": "https://github.com/dmitrijkalugin/wildberries-api-client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kalugin Dmitrii",
            "email": "cap0neal@yandex.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "DmitrijKalugin\\WildberriesApiClient\\": "src/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.21"
    },
    "autoload-dev": {
        "psr-4": {
            "DmitrijKalugin\\WildberriesApiClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:dmitrijkalugin/wildberries-api-client.git"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "secure-http": false
    },
    "extra": {
        "laravel": {
            "providers": [
                "DmitrijKalugin\\WildberriesApiClient\\WildberriesServiceProvider"
            ],
            "aliases": {
                "Wildberries": "DmitrijKalugin\\WildberriesApiClient\\Facades\\Wildberries"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
